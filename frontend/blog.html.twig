{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}

  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="index.html" class="logo">
              <img src="{{ asset('logo.png') }}" alt="">
            </a>
            <!-- ***** Logo End ***** -->
            <!-- ***** Menu Start ***** -->
            <ul class="nav">
              <li class="scroll-to-section"><a href="index.html">Home</a></li>
              <li class="scroll-to-section"><a href="/depot">Dépots</a></li>
              <li class="scroll-to-section"><a href="/produitcon" class="active">Produits</a></li>
              <li class="scroll-to-section"><a href="/produits/boutique">Boutique</a></li>
              <li class="scroll-to-section"><a href="/post" class="active">Blog</a></li>
              <li class="scroll-to-section"><a href="/phase">Production</a></li>
              <li class="scroll-to-section"><a href="/utilisateur">Users</a></li>
            </ul>
            <a class='menu-trigger'>
                <span>Menu</span>
            </a>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>
   <!-- ***** Header Area End ***** -->

  <div>
    <img src="{{ asset('bg1.png')}}" >
  </div>
  <div id="services" class="our-services section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <div class="section-heading wow bounceIn" data-wow-duration="1s" data-wow-delay="0.2s">
            <h2>Nos Articles</h2>
          </div>
        </div>
      </div>
    </div>
  </div>

  <section class="posts section">
    <div class="container">
      <div class="row">
        {% for post in posts %}
          <div class="col-md-4">
            <div class="post-item">
              <div class="post-thumb">
                <img class="img-responsive" src="{{ post.image ?: asset('images/default-post.png') }}" alt="post-img" />
              </div>
              <div class="post-content">
                <h4><a href="{{ path('app_post_show', {'id': post.id}) }}">{{ post.titre }}</a></h4>
                <p>{{ post.description|length > 30 ? post.description|slice(0, 30) ~ '...' : post.description }}</p>
                <p class="author">Auteur : {{ post.auteur }}</p>
                <p class="date">Publié le : {{ post.createur ? post.createur|date('d/m/Y H:i') : '' }}</p>
                <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-primary">Lire plus</a>
              </div>
            </div>
          </div>
        {% else %}
          <div class="col-12 text-center">
            <p>Aucun article disponible.</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <a href="{{ path('app_post_new') }}" class="btn btn-success">Ajouter un post</a>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright © 2025 ECOWAY. All Rights Reserved</p>
        </div>
      </div>
    </div>
  </footer>
{% endblock %}
