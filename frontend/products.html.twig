{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}

  <!-- ***** Header Area Start ***** -->
  <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <!-- ***** Logo Start ***** -->
            <a href="index.html" class="logo">
              <img src="{{ asset('logo.png') }}" alt="">
            </a>
            <!-- ***** Logo End ***** -->
            <!-- ***** Menu Start ***** -->
            <ul class="nav">
              <li class="scroll-to-section"><a href="index.html">Home</a></li>
              <li class="scroll-to-section"><a href="/depot">Dépots</a></li>
              <li class="scroll-to-section"><a href="/produitcon" >Produits</a></li>
              <li class="scroll-to-section"><a href="/produits/boutique">Boutique</a></li>
              <li class="scroll-to-section"><a href="/bande/commande">Achat</a></li>
              <li class="scroll-to-section"><a href="/phase">Production</a></li>
              <li class="scroll-to-section"><a href="/utilisateur">Users</a></li>
            </ul>
            <a class='menu-trigger'>
                <span>Menu</span>
            </a>
            <!-- ***** Menu End ***** -->
          </nav>
        </div>
      </div>
    </div>
  </header>
  <!-- ***** Header Area End ***** -->

  <div>
    <img src="{{ asset('bg1.png')}}" >
  </div>
  <div id="services" class="our-services section">
    <div class="container">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
         <div class="section-heading wow bounceIn" data-wow-duration="1s" data-wow-delay="0.2s">
    <h2>Nos produits</h2>
</div>

        </div>
      </div>
    </div>

    <div >

 <section class="products section">
	<div class="container">
		<div class="row">
			{% for produit in produits %}
				<div class="col-md-4">
					<div class="product-item">
						<div class="product-thumb">
							<span class="bage">Nouveau</span>
							<div class="preview-meta">
								<ul>
									<li>
										<a href="{{ path('app_produitcon_show', {'id': produit.id}) }}">
											<i class="fa-solid fa-eye"></i>
										</a>
									</li>
									<li>
										<a href="{{ path('app_produitcon_edit', {'id': produit.id}) }}">
											<i class="fa-solid fa-pen"></i>
										</a>
									</li>
								</ul>
							</div>
						</div>
						<div class="product-content">
							<h4><a href="product-single.html">{{ produit.nom }}</a></h4>
						
							<p class="date">Ajouté le : {{ produit.dateAjout ? produit.dateAjout|date('d/m/Y H:i') : '' }}</p>
						</div>
					</div>
				</div>
			{% else %}
				<div class="col-12 text-center">
					<p>Aucun produit disponible.</p>
				</div>
			{% endfor %}
		</div>


	</div>
</section>



<div class="container-fluid">
<div class="row">
<div class="service-item wow bounceInUp" data-wow-duration="1s" data-wow-delay="0.3s">
<div class="section-heading wow bounceIn" data-wow-duration="1s" data-wow-delay="0.2s">
            <h6>listes des catégories</h6>
</div>
{% include 'categorie/index.html.twig' %}
        <div class="text-center my-4">
</div>
</div>
   
</div>
</div>
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright © 2025 ECOWAY. All Rights Reserved</p>
        </div>
      </div>
    </div>
  </footer>
{% endblock %}
