{% extends 'base.html.twig' %}

{% block title %}Détails de la Bande de Commande{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center text-primary mb-4">Détails de la Bande de Commande</h1>

        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ bande_commande.id }}</td>
                        </tr>
                        <tr>
                            <th>Référence</th>
                            <td>{{ bande_commande.reference }}</td>
                        </tr>
                        <tr>
                            <th>Date Commande</th>
                            <td>{{ bande_commande.datecommande ? bande_commande.datecommande|date('d/m/Y H:i') : 'Non définie' }}</td>
                        </tr>
                        <tr>
                            <th>Fournisseur</th>
                            <td>{{ bande_commande.fournisseur }}</td>
                        </tr>
                        <tr>
                            <th>Quantité Totale</th>
                            <td>{{ bande_commande.quantiteTotale }}</td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>
                                <span class="badge 
                                    {% if bande_commande.statut == 'Validé' %}bg-success
                                    {% elseif bande_commande.statut == 'Annulé' %}bg-danger
                                {% else %}bg-warning{% endif %}">
                                {{ bande_commande.statut }}
                                </span>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4 d-flex justify-content-between">
            <a href="{{ path('app_bande_commande_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <div>
                <a href="{{ path('app_bande_commande_edit', {'id': bande_commande.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Modifier
                </a>

                {{ include('bande_commande/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
