{% extends 'base.html.twig' %}

{% block title %}Détails du Commentaire{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Détails du Commentaire</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ commentaire.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Message</th>
                    <td>{{ commentaire.message }}</td>
                </tr>
                <tr>
                    <th scope="row">Auteur</th>
                    <td>{{ commentaire.auteur }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_commentaire_index') }}" class="btn btn-secondary">⬅ Retour à la liste</a>
            <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-warning">✏ Modifier</a>
            
            <!-- Bouton de suppression avec confirmation -->
            <form method="post" action="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                <button type="submit" class="btn btn-danger">🗑 Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}
