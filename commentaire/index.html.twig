{% extends 'base.html.twig' %}

{% block title %}Gestion des Commentaires{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Liste des Commentaires</h1>

        <table class="table table-striped table-hover text-center">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Message</th>
                    <th>Auteur</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for commentaire in commentaires %}
                    <tr>
                        <td>{{ commentaire.id }}</td>
                        <td>{{ commentaire.message|length > 50 ? commentaire.message|slice(0, 50) ~ '...' : commentaire.message }}</td>
                        <td>{{ commentaire.auteur }}</td>
                        <td>
                            <a href="{{ path('app_commentaire_show', {'id': commentaire.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                            <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucun commentaire trouv√©.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a href="{{ path('app_commentaire_new') }}" class="btn btn-success">+ Nouveau Commentaire</a>
        </div>
    </div>
{% endblock %}
