{% extends 'base.html.twig' %}

{% block title %}D√©tails du Post{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">D√©tails du Post</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ post.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Titre</th>
                    <td>{{ post.titre }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ post.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Cr√©ateur</th>
                    <td>{{ post.createur }}</td>
                </tr>
                <tr>
                    <th scope="row">Image</th>
                    <td>
                        {% if post.image %}
                            <img src="{{ asset('uploads/images/' ~ post.image) }}" alt="Image du post" class="img-fluid rounded" style="max-width: 300px;">
                        {% else %}
                            <em>Aucune image disponible</em>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_post_index') }}" class="btn btn-secondary">‚¨Ö Retour √† la liste</a>
            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning">‚úè Modifier</a>

            <!-- Bouton de suppression avec confirmation -->
            <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce post ? Cette action est irr√©versible.');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                <button type="submit" class="btn btn-danger">üóë Supprimer</button>
            </form>
        </div>
    </div>
{% endblock %}
